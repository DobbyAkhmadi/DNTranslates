   <talk_paragraph index="n1823_merca_fargeau-1-a" image="QN_Grele.dds" itemindex="" portrait_left="" portrait_right="Npc_Right_fargeau.dds" center_image="">
      <talk_answer link_index="n1823_merca_fargeau-1-b" mid="66" select_type="2" />
      <talk_question mid="7"><![CDATA[<html>$Merchant Fargeau$<BR>Guy seemed tired from the hard work but he said he's doing well.<BR>He wanted me to pass this letter to his family.</html>]]></talk_question>
   </talk_paragraph>
   <talk_paragraph index="n1823_merca_fargeau-1-b" image="" itemindex="" portrait_left="" portrait_right="Npc_Right_fargeau.dds" center_image="">
      <talk_answer link_index="n1823_merca_fargeau-2" mid="67" select_type="2" />
      <talk_question mid="8"><![CDATA[<html>${user_nick}$<BR><FONT color=#662500>Thank you. Oh, by the way… If anyone asks about me...</FONT></html>]]></talk_question>
   </talk_paragraph>
