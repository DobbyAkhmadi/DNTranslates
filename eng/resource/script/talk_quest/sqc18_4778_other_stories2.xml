   <talk_paragraph index="n2007_sterope-1-a" image="QN_Vernicka.dds" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n2007_sterope-1-b" mid="9" select_type="0"><![CDATA[<html>Okay.</html>]]></talk_answer>
      <talk_question mid="8"><![CDATA[<html>$Merchant Sterope$<BR>Oh right, Vernicka was looking for you. I'm sorry, maybe it's because of me.</html>]]></talk_question>
