   <talk_paragraph index="n701_oldkarakule-2-b" image="QN_Npc_karahan.dds" itemindex="" portrait_left="" portrait_right="NPC_Right_OldKarakule.dds" center_image="">
      <talk_answer link_index="n701_oldkarakule-2-c" mid="93" select_type="2" />
