   <talk_paragraph index="n713_soceress_tamara-2-a" image="" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n713_soceress_tamara-2-b" mid="32" select_type="0"><![CDATA[<html>(Give a herb with gold color)</html>]]></talk_answer>
