      <talk_answer link_index="n713_soceress_tamara-2-f" mid="40" select_type="0"><![CDATA[<html>Ah....</html>]]></talk_answer>
      <talk_question mid="39"><![CDATA[<html>$Master Sorceress Tamara$<BR>Okay!<BR><FONT color=#7e12d3>(Tamara claps her hands and gives me a spoon)</FONT><BR>Try it.</html>]]></talk_question>
