   <talk_paragraph index="n034_cleric_master_germain-accepting" image="" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n034_cleric_master_germain-accepting-a" mid="7" select_type="0"><![CDATA[<html>What's going on? </html>]]></talk_answer>
      <talk_question mid="6"><![CDATA[<html>$Master Cleric Jermain$<BR>Can I ask you for a big favour?</html>]]></talk_question>
