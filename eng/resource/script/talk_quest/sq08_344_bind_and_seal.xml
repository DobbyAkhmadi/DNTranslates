   <talk_paragraph index="n028_scholar_bailey-accepting" image="" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n028_scholar_bailey-accepting-a" mid="6" select_type="0"><![CDATA[<html> Are there any information? </html>]]></talk_answer>
      <talk_question mid="5"><![CDATA[<html>$Heraldry Scholar Bailey$<BR>The {user_class} {user_nick}, You have came at the right time. I have some information which may be useful to you.</html>]]></talk_question>
   </talk_paragraph>
   <talk_paragraph index="n028_scholar_bailey-accepting-a" image="" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n028_scholar_bailey-accepting-acceptted" mid="10" select_type="0"><![CDATA[<html><FONT color=#086171>Accept Quest</FONT></html>]]></talk_answer>
