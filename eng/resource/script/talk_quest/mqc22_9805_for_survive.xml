      <talk_question mid="84"><![CDATA[<html>${user_nick}$<BR><FONT color=#662500>But we can't just sit around and do nothing.</FONT></html>]]></talk_question>
   </talk_paragraph>
   <talk_paragraph index="n735_darklair_mocha-1" image="" itemindex="" portrait_left="" portrait_right="NPC_Right_Darklair_Castia.dds" center_image="">
      <talk_answer link_index="n735_darklair_mocha-1-" mid="50" select_type="5" />
