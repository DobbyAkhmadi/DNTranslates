   <talk_paragraph index="n011_priest_leonardo-2" image="QS_Default.dds" itemindex="300059" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n011_priest_leonardo-2-a" mid="15" select_type="0"><![CDATA[<html>I'm suspicious of one of the clerics.</html>]]></talk_answer>
      <talk_question mid="14"><![CDATA[<html>$Master Cleric Leonard${action:Talk}<BR>It has come to my attention that the <FONT color=#a82424>Vision Orb</FONT> is missing. <BR>How may I be of assistance?</html>]]></talk_question>
