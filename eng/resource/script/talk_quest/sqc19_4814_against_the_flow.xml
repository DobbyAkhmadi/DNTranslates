   <talk_paragraph index="n2063_sorceress_anna-3" image="" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n2063_sorceress_anna-3-a" mid="709" select_type="0"><![CDATA[<html>(Tell Anna how you found Anton.)</html>]]></talk_answer>
      <talk_question mid="670"><![CDATA[<html>$Sorceress Anna$<BR><FONT color=#387206>{user_nick}</FONT>! Did you find the boy?!</html>]]></talk_question>
   </talk_paragraph>
   <talk_paragraph index="n2063_sorceress_anna-3-a" image="" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n2063_sorceress_anna-3-b" mid="710" select_type="0"><![CDATA[<html>But… (Tell her about your conversation with Anton)</html>]]></talk_answer>
      <talk_question mid="671"><![CDATA[<html>$Sorceress Anna$<BR>Oh, there he is! So he was playing hide-and-seek in Red Waste and kept hiding because he was scared? Phew…</html>]]></talk_question>
   </talk_paragraph>
   <talk_paragraph index="n2063_sorceress_anna-3-b" image="" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n2063_sorceress_anna-3-c" mid="711" select_type="0"><![CDATA[<html>(Continue)</html>]]></talk_answer>
      <talk_question mid="672"><![CDATA[<html>$Sorceress Anna$<BR>…What? That sounds worse than I expected.</html>]]></talk_question>
