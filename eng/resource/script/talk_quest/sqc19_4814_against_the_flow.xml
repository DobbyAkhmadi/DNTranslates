   <talk_paragraph index="n2063_sorceress_anna-3-d" image="" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n2063_sorceress_anna-3-e" mid="713" select_type="0"><![CDATA[<html>(Continue)</html>]]></talk_answer>
