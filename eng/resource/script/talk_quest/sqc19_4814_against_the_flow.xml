   <talk_paragraph index="n2063_sorceress_anna-3-c" image="" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n2063_sorceress_anna-3-d" mid="712" select_type="0"><![CDATA[<html>(Continue)</html>]]></talk_answer>
      <talk_question mid="673"><![CDATA[<html>$Sorceress Anna$<BR>This is kind of dangerous. Maybe I should report to Lord Norfe about this.</html>]]></talk_question>
