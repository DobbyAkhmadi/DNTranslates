   <talk_paragraph index="n001_elder_harold-2" image="QN_Guard_Timose.dds" itemindex="" portrait_left="" portrait_right="NPC_Right_Harold.dds" center_image="">
      <talk_answer link_index="n001_elder_harold-2-a" mid="140" select_type="2" />
      <talk_question mid="10"><![CDATA[<html>$Mayor Harold$<BR>You're here... I heard about <FONT color=#a82424>Rose</FONT> and <FONT color=#a82424>Timothy</FONT>... Timothy sacrificed himself for Rose. This is all my fault. My heart feels so heavy now.</html>]]></talk_question>
   </talk_paragraph>
   <talk_paragraph index="n001_elder_harold-2-a" image="QN_Guard_Timose.dds" itemindex="" portrait_left="" portrait_right="NPC_Right_Harold.dds" center_image="">
