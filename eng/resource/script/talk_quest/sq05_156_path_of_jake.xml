   <talk_paragraph index="n013_cleric_tomas-accepting-b" image="QN_Npc_Bishop.dds" itemindex="" portrait_left="" portrait_right="Npc_Right_Cl_Tomas.dds" center_image="">
      <talk_answer link_index="n013_cleric_tomas-accepting-c" mid="86" select_type="2" />
      <talk_question mid="7"><![CDATA[<html>$Cleric Thomas$<BR>But it was the<FONT color=#a82424>Archbishop</FONT> who dispatched us to <FONT color=#a82424>Mana Ridge</FONT>... Can this be merely coincidence? Or, is there someone who leaked information on <FONT color=#a82424>Dragon Followers</FONT> to the Archbishop? Could he been used? We are lacking of informations.</html>]]></talk_question>
   </talk_paragraph>
   <talk_paragraph index="n013_cleric_tomas-accepting-c" image="" itemindex="" portrait_left="" portrait_right="Npc_Right_Cl_Tomas.dds" center_image="">
      <talk_answer link_index="n013_cleric_tomas-accepting-d" mid="88" select_type="2" />
