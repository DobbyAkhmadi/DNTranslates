   <talk_paragraph index="n2045_merca_arc-accepting-a" image="" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n2045_merca_arc-accepting-acceptted" mid="57" select_type="0"><![CDATA[<html><FONT color=#086171>Accept Quest</FONT></html>]]></talk_answer>
