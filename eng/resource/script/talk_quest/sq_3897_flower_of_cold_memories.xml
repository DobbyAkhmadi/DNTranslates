   <talk_paragraph index="n100_event_ilyn-2" image="" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n100_event_ilyn-2-buff_check_1" mid="25" select_type="0"><![CDATA[<html>(You reach out your hand.)</html>]]></talk_answer>
      <talk_question mid="24"><![CDATA[<html>$Event Helper Irine$<BR>I heard the news! They say you defeated the Frozen Dragon! I bet it was an amazing performance.<BR>Place your hand here, <FONT color=#387206>{user_nick}</FONT>, and I'll give you a special power that will last for a little while.</html>]]></talk_question>
