   <talk_paragraph index="n1525_aruno-5-h" image="" itemindex="" portrait_left="" portrait_right="NPC_Right_Arno.dds" center_image="">
      <talk_answer link_index="n1525_aruno-5-i" mid="134" select_type="2" />
      <talk_question mid="133"><![CDATA[<html>${user_nick}$<BR><FONT color=#662500>Is this slate trying to show me these things? But why?</FONT></html>]]></talk_question>
