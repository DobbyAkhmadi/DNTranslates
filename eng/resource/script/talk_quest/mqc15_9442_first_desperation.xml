   <talk_paragraph index="n1579_for_memory-2-a" image="" itemindex="" portrait_left="NPC_Left_Arno.dds" portrait_right="Npc_Right_Gaharam.dds" center_image="">
      <talk_answer link_index="n1579_for_memory-2-b" mid="101" select_type="2" />
