   <talk_paragraph index="n1571_meriendel-9-s" image="QW_96.dds" itemindex="" portrait_left="" portrait_right="Npc_Right_Marriendel.dds" center_image="">
      <talk_answer link_index="n1571_meriendel-9-!next" mid="154" select_type="2" />
      <talk_question mid="57"><![CDATA[<html>$Archer Meriendel$<BR>…Yes. Please meet me at the <FONT color=#a82424>Eye of the Goddess</FONT>. I'll tell you everything that I know with the Goddess watching over us.</html>]]></talk_question>
