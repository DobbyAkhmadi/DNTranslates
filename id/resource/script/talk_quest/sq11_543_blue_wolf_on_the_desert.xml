   <talk_paragraph index="n098_warrior_master_lodrigo-1-h" image="" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n098_warrior_master_lodrigo-2" mid="36" select_type="0"><![CDATA[<html>Apa kamu tahu ayahku?</html>]]></talk_answer>
      <talk_question mid="35"><![CDATA[<html>$Master Warrior Rodrigo$<BR>Kamu, terlihat seperti <FONT color=#a94407>Sir Lambert</FONT>.<BR><FONT color=#7e12d2>(Nama ayahku Lambert?)</FONT></html>]]></talk_question>
