   <talk_paragraph index="n028_scholar_bailey-3" image="" itemindex="" portrait_left="" portrait_right="" center_image="">
      <talk_answer link_index="n028_scholar_bailey-3-a" mid="35" select_type="0"><![CDATA[<html>(Kamu memberikan Mutated Jewel.)</html>]]></talk_answer>
      <talk_question mid="34"><![CDATA[<html>$Heraldry Scholar Bailey$<BR>Ah, kamu telah kembali.<BR>Jadi, apakah kamu mendapatkannya?</html>]]></talk_question>
